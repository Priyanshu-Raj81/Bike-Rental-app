    <div class="col-8 mb-3 mt-3">
        <h4>Book Now</h4>
        <button id="rzp-button1" class="btn btn-primary">Pay Now</button>
    </div>
    <% } %> -->

    <div class="col-8 mb-3">
        <h4>Where you'll find the Vehicle</h4>
        <div id="map"></div>
    </div>
</div>



<script src="/js/map.js"></script>